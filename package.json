{
  "name": "stopwatch-elapsed",
  "version": "1.0.0",
  "description": "Stopwatch with elapsed time calculation in human format",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "start:dev": "npx nodemon",
    "clean": "rm -rf ./build",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepack": "npm run build"
  },
  "keywords": [
    "stopwatch",
    "timer",
    "time",
    "human elapsed",
    "elapsed",
    "node",
    "typescript",
    "javascript"
  ],
