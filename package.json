  "author": "Marcio Retamiro",
  "license": "AGPLv3",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retamiro/stopwatch-elapsed.git"
  },
  "bugs": {
