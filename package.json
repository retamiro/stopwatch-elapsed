{
  "name": "stopwatch-elapsed",
  "version": "1.0.3",
  "description": "Stopwatch with elapsed time calculation in human format",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "start:dev": "npx nodemon",
    "clean": "rm -rf ./build",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepack": "npm run build"
  },
  "readme": "README.md",
  "keywords": [
    "stopwatch",
    "timer",
    "time",
    "human elapsed",
    "elapsed",
    "node",
    "typescript",
    "javascript"
